@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Desktop-BBS论坛管理系统</title>
    <meta name="keywords" content="desktop-Webos,Webos,windows-webos">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/themes/layui/css/layui.css">
    <link rel="stylesheet" type="text/css" href="~/Content/themes/desktop/style/swiper-3.4.0.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/themes/desktop/style/userPages.css">
    <script src="~/Content/themes/desktop/js/jquery-1.11.3.js"></script>
    <script src="~/Content/themes/desktop/js/loadWeather.js"></script>
    <script src="~/Content/utf8-net/ueditor.config.js"></script>
    <script src="~/Content/utf8-net/ueditor.all.min.js"></script>
    <script src="~/Content/utf8-net/lang/zh-cn/zh-cn.js"></script>
</head>
<body>
    <div class="conatiner">
        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll" >
                <ul class="layui-nav layui-nav-tree" lay-filter="listUser">
                    <li class="layui-nav-item layui-nav-itemed">
                        <a href="javascript:;">版区展示</a>
                        <dl class="layui-nav-child ">
                            <dd data-list="#userBox1" class="layui-this"><a href="javascript:;">所有版区</a></dd>
                            <dd data-list="#userBox2"><a href="javascript:;">版区统计</a></dd>
                            <dd data-list="#userBox3"><a href="javascript:;">版区申明</a></dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>
        <div class="containerRight">
            <div class="containerShowBox " id="userBox1">
                <div class="layui-tab layui-tab-brief" lay-filter="docDemoTabBrief">
                    <ul class="layui-tab-title">
                        <li class="layui-this" style="width: 100%;">版区管理</li>
                    </ul>
                    <div class="layui-tab-content">
                        <div class="layui-tab-item layui-show">
                            <fieldset class="layui-elem-field">
                                <legend>操作</legend>
                                <div class="layui-field-box">
                                    <button class="layui-btn layui-btn-primary" data-operate="addExpand"><i class="layui-icon">&#xe608;</i>新增</button>
                                </div>
                            </fieldset>
                            <fieldset class="layui-elem-field">
                                <legend>筛选</legend>
                                <div class="layui-field-box">
                                    <form class="layui-form  layui-form-mid" action="">
                                        <div class="layui-form-item layui-form-item-inline">
                                            <div class="layui-inline">
                                                <label class="layui-form-label">版区名称:</label>
                                                <div class="layui-input-inline layui-input-short">
                                                    <input type="text" name="expendName"  autocomplete="off" placeholder="请输入" class="layui-input">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="layui-form-item layui-form-item-inline">
                                            <div class="layui-inline">
                                                <label class="layui-form-label">发帖量:</label>
                                                <div class="layui-input-inline" style="width: 100px;">
                                                    <input type="text" name="expendmin" placeholder="" autocomplete="off" class="layui-input">
                                                </div>
                                                <div class="layui-form-mid">-</div>
                                                <div class="layui-input-inline" style="width: 100px;">
                                                    <input type="text" name="expendmax" placeholder="" autocomplete="off" class="layui-input">
                                                </div>
                                            </div>
                                        </div>
                                        <button class="layui-btn " lay-submit="search" lay-filter="search">确认</button>
                                    </form>
                                </div>
                            </fieldset>
                            <table class="layui-table"  style="margin-top: 20px">
                                <colgroup>
                                    <col width="150">
                                    <col width="150">
                                    <col>
                                </colgroup>
                                <thead>
                                <tr>
                                    <th>版区名称</th>
                                    <th>版区负责人</th>
                                    <th>版区发帖量</th>
                                    <th>操作</th>
                                </tr>
                                </thead>
                                <tbody id="expendShow">
                                </tbody>
                            </table>
                            <div id="pages1" ></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="containerShowBox hidden" id="userBox2">
                <div class="layui-tab layui-tab-brief" lay-filter="docDemoTabBrief">
                    <ul class="layui-tab-title">
                        <li class="layui-this" style="width: 100%;">报表统计</li>
                    </ul>
                    <div class="layui-tab-content">
                        <div class="layui-tab-item layui-show">
                            <fieldset class="layui-elem-field">
                                <legend>筛选</legend>
                                <div class="layui-field-box">
                                    <div class="layui-field-box">
                                        <form class="layui-form  layui-form-mid" action="">
                                            <div class="layui-form-item layui-form-item-inline">
                                                <div class="layui-inline">
                                                    <label class="layui-form-label">日期</label>
                                                    <div class="layui-input-inline">
                                                        <input type="text" name="date" id="date" lay-verify="date" placeholder="yyyy-mm-dd" autocomplete="off" class="layui-input" onclick="layui.laydate({elem: this,format: 'YYYY-MM-DD'})">
                                                    </div>
                                                </div>
                                            </div>
                                            <button class="layui-btn" lay-submit="getDate" lay-filter="getDate" >确认</button>
                                        </form>
                                    </div>
                                </div>
                            </fieldset>
                            <div id="main" style="height:400px;"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="containerShowBox hidden" id="userBox3">
                <div class="layui-tab layui-tab-brief" lay-filter="docDemoTabBrief">
                    <ul class="layui-tab-title">
                        <li class="layui-this" style="width: 100%;">版区申明</li>
                    </ul>
                    <div class="layui-tab-content">
                        <div class="layui-tab-item layui-show">
                            <form class="layui-form  layui-form-mid" action="" style="width:100%;float: none;z-index: 9999;">
                                <fieldset class="layui-elem-field">
                                    <legend>发表</legend>
                                    <div class="layui-field-box">
                                        <div class="layui-field-box">
                                            <div class="layui-form-item layui-form-item-inline">
                                                <div class="layui-inline">
                                                    <div class="layui-input-inline">
                                                        <input type="text" name="titleName" lay-verify="required" placeholder="请输入文章主题" autocomplete="off" class="layui-input">
                                                    </div>

                                                    <label class="layui-form-label">发表版区：</label>
                                                    <div class="layui-input-inline" id="titleMyExpend">
                                                        
                                                    </div>
                                                </div>
                                                
                                            </div>
                                            <button class="layui-btn" lay-submit="setTitle" lay-filter="setTitle" id="setTitle" style="display:none">获取</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                            <textarea id="myEditor" name="myEditor" runat="server"></textarea>
                            <p style="text-align:center;margin-top:20px"><button class="layui-btn" lay-submit="" lay-filter="" id="setExpendTitle">发布</button></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/themes/desktop/js/echarts.min.js"></script>
    <script src="~/Content/themes/layui/layui.js"></script>
    <script src="~/Content/themes/desktop/js/expand.js"></script>
</body>
</html>